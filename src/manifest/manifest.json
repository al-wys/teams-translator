{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.5/MicrosoftTeams.schema.json",
  "manifestVersion": "1.5",
  "id": "92296b50-95a2-11ea-935a-c1eb6f0fdb02",
  "version": "1.0.0",
  "packageName": "teamstranslator",
  "developer": {
    "name": "FW",
    "websiteUrl": "https://{{HOSTNAME}}",
    "privacyUrl": "https://{{HOSTNAME}}/privacy.html",
    "termsOfUseUrl": "https://{{HOSTNAME}}/tou.html"
  },
  "name": {
    "short": "Teams Translator",
    "full": "Teams Translator"
  },
  "description": {
    "short": "Translate messages in Teams.",
    "full": "Translate messages in Teams."
  },
  "icons": {
    "outline": "icon-outline.png",
    "color": "icon-color.png"
  },
  "accentColor": "#D85028",
  "configurableTabs": [],
  "staticTabs": [],
  "bots": [],
  "connectors": [],
  "composeExtensions": [
    {
      "botId": "{{MICROSOFT_APP_ID}}",
      "canUpdateConfiguration": true,
      "commands": [
        {
          "id": "msgTransToZhAction",
          "type": "action",
          "title": "Translate Message to Chinese",
          "description": "Translate the message to Chinese.",
          "context": [
            "message"
          ],
          "fetchTask": true
        },
        {
          "id": "newTransMsgAction",
          "type": "action",
          "title": "Create Translated Message",
          "description": "Create a message in a language.",
          "context": [
            "compose"
          ],
          "parameters": [
            {
              "name": "targetLanguage",
              "title": "Target Language",
              "description": "The language that you want translate text to.",
              "inputType": "choiceset",
              "choices": [
                {
                  "title": "English",
                  "value": "en"
                },
                {
                  "title": "繁體中文",
                  "value": "zh-TW"
                },
                {
                  "title": "简体中文",
                  "value": "zh-CN"
                }
              ],
              "value": "en"
            },
            {
              "name": "msg",
              "title": "Message",
              "description": "The message in your language",
              "inputType": "textarea"
            }
          ]
        }
      ]
    }
  ],
  "permissions": [
    "identity"
  ],
  "validDomains": [
    "{{HOSTNAME}}"
  ]
}